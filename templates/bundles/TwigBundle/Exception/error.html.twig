{% extends 'base.html.twig' %}

{% block header %}

    <div class="container pt-5">
        <div class="row">
            <div class="col d-flex">
                <div class="jumbotron my-auto">
                    <h1 class="display-4">Oops! An error has occurred <i class="far fa-frown"></i></h1>
                    {% if exception.message is defined %}
                        <h2>{{ exception.message }}</h2>
                    {% endif %}
                    <h4>The server returned a "{{ status_code }} {{ status_text }}".</h4>
                    <p>Something is broken. Please let us know what you were doing when this error occurred. We will fix it as soon as possible. Sorry for any inconvenience caused.</a>.</p>
                </div>    
            </div>
        </div>
    </div>

{% endblock %}

