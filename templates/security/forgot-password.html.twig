{# templates/security/forgot-password.html.twig #}
{% extends 'base.html.twig' %}

{% block header %}

    <div class="container pt-5">
        <div class="row">
            <div class="col d-flex">
                <div class="jumbotron my-auto">
                    <h1 class="display-4">Forgot password</h1>
                    <p>Fill the form to reset your password</p>
                </div>    
            </div>
        </div>
    </div>

{% endblock %}

{% block body %}
	
    <div class="row d-flex justify-content-center">
        <div class="align-self-center">
			{{ form_start(form) }}
			    {{ form_row(form.username) }}

			    <button type="submit" class="btn btn-primary">Ask for reset password</button>
			{{ form_end(form) }}
		</div>
	</div>

{% endblock %}

{% block footer %}
    <footer class="fixed-bottom">
        <div class="container">
            <div class="row mt-5 pt-2">
                <div class="col">
                    <p class="text-center">SnowTricks, all rights reserved <i class="far fa-copyright"></i> 2018</p>
                </div>
            </div>
        </div>
    </footer>
{% endblock %}